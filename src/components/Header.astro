---
import {
  DocumentPlusIcon,
  DocumentTextIcon,
  HomeIcon,
  UserGroupIcon,
} from "@heroicons/react/24/solid";

import ThemeToggle from "./ThemeToggle";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="sticky z-10 top-4">
  <nav
    class="px-4 lg:px-6 py-2.5 mb-4 bg-gray-100 rounded-xl dark:(bg-neutral-800 text-neutral-200)"
  >
    <div
      class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
    >
      <div class="justify-between items-center w-screen flex font-semibold">
         <a
          href="/"
          class=`${currentPath === '' && 'active'} hover:(no-underline  hover:text-blue-400)`
        >
          <div class="flex items-center justify-center gap-1">
            <HomeIcon className="h-6 hover:text-blue-400" />
            <div
              class=" hidden md:(block hover:(text-blue-400 dark:(text-blue-400))) hover:text-blue-400"
            >
              Home
            </div>
          </div>
        </a>

        <a
          href="/posts"
          class=`${currentPath === 'posts' && 'active'} hover:(no-underline  hover:text-blue-400)`
        >
          <div
            class="flex items-center justify-center gap-1"
          >
            <DocumentTextIcon className="h-6 hover:text-blue-400" />
            <div
              class="hidden md:(block hover:(text-blue-400 dark:(text-blue-400))) hover:text-blue-400"
            >
              Posts
            </div>
          </div>
        </a>
        <a
          href="/authors"
          class=`${currentPath === 'authors' && 'active'} hover:(no-underline  hover:text-blue-400)`
        >
          <div class="flex items-center justify-center gap-1">
            <UserGroupIcon className="h-6 hover:text-blue-400" />
            <div
              class="hidden md:(block hover:(text-blue-400 dark:(text-blue-400))) hover:text-blue-400"
            >
              Authors
            </div>
          </div>
        </a>
        <a
          href="https://github.com/oyepriyansh/DevTweet"
          class="hover:(no-underline  hover:text-blue-400)"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="flex items-center justify-center whitespace-nowrap gap-1">
            <DocumentPlusIcon className="h-6 hover:text-blue-400" />
            <div
              class="hidden md:(block hover:(text-blue-400 dark:(text-blue-400))) hover:text-blue-400"
            >
              GitHub
            </div>
          </div>
        </a>
        <ThemeToggle client:load />
      </div>
    </div>
  </nav>
</header>